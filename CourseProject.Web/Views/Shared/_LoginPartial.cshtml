@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Loc;
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using CourseProject.Dal.Entities

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Collections" asp-action="Add">@Loc["Add collection"]</a>
    </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark " asp-controller="User" asp-action="Index" title="User Page">@Loc["Hello"] @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline d-none d-sm-block" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">@Loc["Logout"]</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark d-none d-sm-block" id="register" asp-controller="Account" asp-action="Register">@Loc["Register"]</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-controller="Account" asp-action="Login">@Loc["Login"]</a>
    </li>
}